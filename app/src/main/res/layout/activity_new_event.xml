<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#262121"
            android:gravity="center"
            android:text="New Event"
            android:textColor="@color/white"
            android:textSize="35dp"

            >

        </TextView>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <TableRow>
                <TextView android:text="Event Title"
                    >

                </TextView>
                <EditText android:layout_width="0dp"
                    android:layout_weight="1">

                </EditText>
            </TableRow>

            <TableRow>
                <TextView android:text="Event Venue "
                    >

                </TextView>
                <EditText android:layout_width="0dp"
                    android:layout_weight="1">

                </EditText>
            </TableRow>

            <TableRow>
                <TextView android:text="Date and time "
                    >

                </TextView>
                <EditText android:layout_width="0dp"
                    android:layout_weight="1">

                </EditText>
            </TableRow>


            <TableRow>
                <TextView android:text="No of Participants "
                    >

                </TextView>
                <EditText android:layout_width="0dp"
                    android:layout_weight="1">

                </EditText>
            </TableRow>

            <TableRow>
                <TextView android:text="Event Type"
                    >

                </TextView>
                <RadioButton android:text="Online">

                </RadioButton>
                <RadioButton android:text="Offline">

                </RadioButton>
            </TableRow>



            <TextView android:text="Event Description"
                android:layout_marginTop="9dp"
                >

            </TextView>
            <EditText android:layout_width="wrap_content"

                android:lines="5">

            </EditText>












        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#545252"

                android:text="cancel"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:cornerRadius="0dp">

            </Button>

            <Button
                android:backgroundTint="#545252"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Save"
                android:layout_margin="10dp"
                app:cornerRadius="0dp"
                android:textSize="14dp"
                android:textStyle="bold">

            </Button>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>